<% column_name_cn = name_cn(column) %>
<% city_host_value = @city_host.try(column) %>
<% city_away_value = @city_away.try(column) %>
<% if column.present? && column_name_cn.present? && city_away_value.present? && city_host_value.present? %>
<tr>
  <td width="25%"><%= column_name_cn %></td>
  <td width="25%"><%= make_it_price(number_with_precision(city_host_value, precision: precision ||= 1)) %></td>
  <td width="25%"><%= make_it_price(number_with_precision(city_away_value, precision: precision ||= 1)) %></td>
  <% color = if city_host_value < city_away_value then '#e96151' else '#1abc9c' end%>
  <td width="25%" style="color:<%= color %>"><%= comparison_result(city_host:@city_host, city_away:@city_away,  item: column) %></td>
</tr>
<% end %>